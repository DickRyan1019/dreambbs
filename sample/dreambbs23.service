[Unit]
Description=DreamBBS Telnet server
After=syslog.target network.target remote-fs.target nss-lookup.target dreambbs.service

[Service]
Type=forking
PIDFile=/home/bbs/run/bbs.pid
ExecStart=/home/bbs/bin/bbsd &
#ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s QUIT $MAINPID
PrivateTmp=true

[Install]
WantedBy=multi-user.target

